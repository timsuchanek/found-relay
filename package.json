{
  "name": "found-relay",
  "version": "0.3.0-alpha.4",
  "description": "Relay integration for found",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "scripts": {
    "build": "rimraf lib && babel src -d lib",
    "build-fixtures": "npm run update-schema && npm run relay-compiler",
    "lint": "eslint src test *.js",
    "prepublish": "npm run build",
    "relay-compiler": "relay-compiler --src test/modern --schema test/fixtures/schema.graphql",
    "tdd": "jest --watch",
    "test": "npm run build-fixtures && npm run lint && npm run testonly",
    "testonly": "jest --runInBand --verbose",
    "update-schema": "babel-node test/fixtures/updateSchema.js"
  },
  "jest": {
    "setupFiles": [
      "babel-polyfill",
      "<rootDir>/test/setup.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/4Catalyzer/found-relay.git"
  },
  "keywords": [
    "router",
    "relay",
    "react"
  ],
  "author": "4Catalyzer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/4Catalyzer/found-relay/issues"
  },
  "homepage": "https://github.com/4Catalyzer/found-relay#readme",
  "dependencies": {
    "babel-runtime": "^6.23.0",
    "invariant": "^2.2.2",
    "is-promise": "^2.1.0",
    "lodash": "^4.17.4",
    "prop-types": "^15.5.10",
    "prop-types-extra": "^1.0.1",
    "warning": "^3.0.0"
  },
  "peerDependencies": {
    "found": ">=0.3.0",
    "react": "^0.14.9 || >=15.3.0",
    "react-relay": ">=1.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-plugin-relay": "^1.1.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "eslint": "^3.19.0",
    "eslint-config-4catalyzer-react": "^0.2.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.10.3",
    "farce": "^0.2.1",
    "found": "^0.3.1",
    "graphql": "^0.10.3",
    "jest": "^20.0.4",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-relay": "^1.1.0",
    "relay-compiler": "^1.1.0",
    "relay-local-schema": "^0.6.2",
    "relay-runtime": "^1.1.0",
    "rimraf": "^2.6.1"
  }
}
